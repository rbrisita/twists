{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "es6" // es2015, es6, es2018
        ],
        "module": "commonjs", // commonjs, es2015, esnext
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5",
    },
    "exclude": [
        "node_modules",
        "vendor",
        "resources/ts/directives",
        "resources/ts/main.ts",
        "resources/ts/pipes/replace.pipe.ts"
    ]
}
